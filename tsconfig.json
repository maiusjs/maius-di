{
 "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration":true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "importHelpers": true,
    "sourceMap": true,
    "outDir": "dist",
  }
}
